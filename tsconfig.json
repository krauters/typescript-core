{
  "compilerOptions": {
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "jsx": "react", // Enable JSX support
    "module": "ESNext", // Latest module system
    "moduleResolution": "node", // Node module resolution strategy
    "outDir": "./dist", // Output directory for compiled files
    "resolveJsonModule": true, // Include modules imported with .json extension
    "rootDir": "./src", // Root directory for source files
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "target": "ESNext", // Latest ECMAScript target
    "types": ["mocha", "node"] // Type definitions for Mocha and Node
  },
  "exclude": ["node_modules"],
  "include": [
    "*.ts",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
  ],
}
